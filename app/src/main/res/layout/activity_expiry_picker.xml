<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExpiryPickerActivity" >

    <TextView
        android:id="@+id/expiry_picker_dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="96dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/expiry_picker_dateDisplay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expiry_picker_dateDisplay"
        android:layout_alignBottom="@+id/expiry_picker_dateDisplay"
        android:layout_marginLeft="84dp"
        android:layout_toRightOf="@+id/expiry_picker_dateDisplay"
        android:text="TextView" />

    <Button
        android:id="@+id/expiry_picker_pickTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expiry_picker_dateDisplay2"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@+id/expiry_picker_dateDisplay2"
        android:text="Button" />

    <Button
        android:id="@+id/expiry_picker_pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expiry_picker_dateDisplay2"
        android:layout_alignBottom="@+id/expiry_picker_dateDisplay2"
        android:layout_alignLeft="@+id/expiry_picker_pickTime"
        android:text="Button" />

</RelativeLayout>